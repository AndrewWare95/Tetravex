<?xml version="1.0" encoding="UTF-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tile_5"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tile_south"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@drawable/south_white_5"
        android:paddingLeft="18dp"
        android:paddingTop="24dp"
        android:textSize="18dp"
        android:textColor="@color/black"
        android:text="3"/>
    <TextView
        android:id="@+id/tile_north"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:background="@drawable/north_white_5"
        android:paddingLeft="18dp"
        android:paddingTop="0dp"
        android:textSize="18dp"
        android:textColor="@color/black"
        android:text="7"/>
    <TextView
        android:id="@+id/tile_west"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:background="@drawable/west_white_5"
        android:paddingLeft="3dp"
        android:paddingTop="10dp"
        android:textSize="18dp"
        android:textColor="@color/black"
        android:text="8"/>
    <TextView
        android:id="@+id/tile_east"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:background="@drawable/east_white_5"
        android:paddingLeft="34dp"
        android:paddingTop="10dp"
        android:textSize="18dp"
        android:textColor="@color/black"
        android:text="6"/>
</RelativeLayout>