<?xml version="1.0" encoding="UTF-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tile_2"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tile_bottom"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_gravity="bottom"
        android:background="@drawable/triangle_bottom"
        android:paddingLeft="55dp"
        android:paddingTop="95dp"
        android:textSize="30dp"
        android:textColor="@color/black"
        android:text="3"/>
    <TextView
        android:id="@+id/tile_left"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_gravity="top"
        android:background="@drawable/triangle_right"
        android:paddingLeft="37dp"
        android:paddingTop="52dp"
        android:textSize="30dp"
        android:textColor="@color/black"
        android:text="7"/>
    <TextView
        android:id="@+id/tile_right"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_gravity="left"
        android:background="@drawable/triangle_left"
        android:paddingLeft="75dp"
        android:paddingTop="52dp"
        android:textSize="30dp"
        android:textColor="@color/black"
        android:text="8"/>

</RelativeLayout>