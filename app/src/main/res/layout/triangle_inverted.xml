<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tile_2"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tile_bottom_inverse"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_gravity="bottom"
        android:background="@drawable/triangle_bottom_inverse"
        android:paddingLeft="55dp"
        android:paddingTop="3dp"
        android:textSize="30dp"
        android:textColor="@color/black"
        android:text="3"/>

    <TextView
        android:id="@+id/tile_left_inverse"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_gravity="left"
        android:background="@drawable/triangle_left_inverse"
        android:paddingLeft="37dp"
        android:paddingTop="40dp"
        android:textSize="30dp"
        android:textColor="@color/black"
        android:text="8"/>
    <TextView
        android:id="@+id/tile_right_inverse"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_gravity="right"
        android:background="@drawable/triangle_right_inverse"
        android:paddingLeft="75dp"
        android:paddingTop="40dp"
        android:textSize="30dp"
        android:textColor="@color/black"
        android:text="6"/>

</RelativeLayout>